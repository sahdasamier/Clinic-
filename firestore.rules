rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”’ Users collection - Only users can access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow clinic managers to read doctor profiles for assignment
      allow read: if request.auth != null && 
                     getUserRole(request.auth.uid) == 'management' &&
                     resource.data.role == 'doctor';
    }
    
    // ðŸ”’ Patients collection - Role-based access
    match /patients/{patientId} {
      allow read, write: if request.auth != null && 
                           (getUserRole(request.auth.uid) == 'management' ||
                            (getUserRole(request.auth.uid) == 'doctor' && 
                             resource.data.doctorId == request.auth.uid) ||
                            getUserRole(request.auth.uid) == 'receptionist');
                            
      // Allow creation by management and doctors
      allow create: if request.auth != null && 
                      (getUserRole(request.auth.uid) == 'management' || 
                       getUserRole(request.auth.uid) == 'doctor');
    }
    
    // ðŸ”’ Appointments collection - Doctor can only see their assigned patients' appointments
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && 
                           (getUserRole(request.auth.uid) == 'management' ||
                            (getUserRole(request.auth.uid) == 'doctor' && 
                             resource.data.doctorId == request.auth.uid) ||
                            getUserRole(request.auth.uid) == 'receptionist');
                            
      allow create: if request.auth != null && 
                      (getUserRole(request.auth.uid) == 'management' || 
                       getUserRole(request.auth.uid) == 'doctor' ||
                       getUserRole(request.auth.uid) == 'receptionist');
    }
    
    // ðŸ”’ Doctor-Patient Assignments - Only management can modify
    match /doctor_patient_assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && getUserRole(request.auth.uid) == 'management';
    }
    
    // ðŸ”’ Medical Records - Only assigned doctor and management can access
    match /medicalRecords/{recordId} {
      allow read, write: if request.auth != null && 
                           (getUserRole(request.auth.uid) == 'management' ||
                            resource.data.doctorId == request.auth.uid);
                            
      allow create: if request.auth != null && 
                      (getUserRole(request.auth.uid) == 'management' || 
                       getUserRole(request.auth.uid) == 'doctor');
    }
    
    // ðŸ”’ Clinics collection - All authenticated users can read their clinic
    match /clinics/{clinicId} {
      allow read: if request.auth != null && 
                     getUserClinicId(request.auth.uid) == clinicId;
      allow write: if request.auth != null && 
                      getUserRole(request.auth.uid) == 'management';
    }
    
    // Helper function to get user role
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to get user clinic ID
    function getUserClinicId(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.clinicId;
    }
  }
} 